name: dockercompose4294125786349667066
services:
  shopping.api:
    build:
      context: C:\Users\user\source\repos\smart-devops\Shopping
      dockerfile: Shopping.API/Dockerfile
    depends_on:
      shopping.db:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      DatabaseSettings:ConnectionString: mongodb://shoppingdb:27017
    image: shoppingapi
    networks:
      default: null
    ports:
    - mode: ingress
      target: 8080
      published: "8000"
      protocol: tcp
  shopping.client:
    build:
      context: C:\Users\user\source\repos\smart-devops\Shopping
      dockerfile: Shopping.Client/Dockerfile
    depends_on:
      shopping.api:
        condition: service_started
      shopping.db:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: shoppingclient
    networks:
      default: null
    ports:
    - mode: ingress
      target: 8080
      published: "8001"
      protocol: tcp
  shopping.db:
    container_name: shoppingdb
    image: mongo
    networks:
      default: null
    ports:
    - mode: ingress
      target: 27017
      published: "27017"
      protocol: tcp
    restart: always
    volumes:
    - type: bind
      source: /site
      target: /data/db
      bind:
        create_host_path: true
networks:
  default:
    name: dockercompose4294125786349667066_default